@page "/forgot-password"
@using Standard_Solution.UI.Components
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
    <MudCard>
        <MudCardHeader>
            <MudText Typo="Typo.h5">Forgot Password</MudText>
        </MudCardHeader>
        <MudCardContent>
            <ForgotPasswordForm OnForgotPasswordSuccess="@HandleForgotPasswordSuccess" />
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="@(() => NavigationManager.NavigateTo("/"))">Back to Login</MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>

@code {
    private void HandleForgotPasswordSuccess()
    {
        Snackbar.Add("Password reset email sent!", Severity.Success);
        NavigationManager.NavigateTo("/");
    }
}